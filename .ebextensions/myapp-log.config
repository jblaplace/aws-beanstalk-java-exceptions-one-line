files:
  "/tmp/myapp-log.json" :
    mode: "000644"
    owner: root
    group: root
    content: |
        {
            "logs": {
                "logs_collected": {
                    "files": {
                        "collect_list": [
                            {
                                "file_path": "/var/app/current/myapp.log",
                                "log_group_name" : "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/myapp.log"]]}`",
                                "log_stream_name": "{instance_id}"
                            }
                        ]
                    }
                }
            }
        }        